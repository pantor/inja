Checks: >
  *,
  -altera-*,
  -cppcoreguidelines-non-private-member-variables-in-classes,
  -fuchsia-*,
  -hicpp-*,
  -llvm-*,
  -llvmlibc-*,
  -misc-non-private-member-variables-in-classes,
  -modernize-*

# Turn all the warnings from the checks above into errors.
HeaderFilterRegex: '.*/include/inja/.*\.hpp$'
UseColor: true
WarningsAsErrors: ''
